extends layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")

block content
        main
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image
                                img(src="https://5.imimg.com/data5/CE/GT/MY-35754189/fresh-apple-500x500.jpg" alt="An Apple")
                            .card__content
                                h2.product__price $6.99
                                p.product__description A very interesting product about so many even more tasty things!
                            .card__actions
                                button.btn Add to Cart
            else
                h1  No Products